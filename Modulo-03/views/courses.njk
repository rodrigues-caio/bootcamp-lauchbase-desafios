{% extends 'layout.njk' %} {% block head %}
<link rel="stylesheet" href="./styles/pagina-posts-iframe.css" />
<link
  href="https://fonts.googleapis.com/icon?family=Material+Icons"
  rel="stylesheet"
/>
<title>Conte√∫dos!</title>
{% endblock %} {% block content %}
<main class="container">
  {% for course in courses %}
    <div
      class="card"
      id="{{course.id}}"
    >
      <img
        src="{{course.image}}"
        alt="{{course.title}}"
      />
      <div class="card-info">
        <h2>{{course.title}}</h2>
        <p>por <strong>{{course.author}}</strong></p>
        <span>{{course.duration}}</span>
      </div>
    </div>
  {% endfor %}
 
</main>

<div class="modal-container">
  <div class="modal">
    <a id="close"><i class="material-icons">close</i></a>
    <a id="maximaze"><span class="material-icons"> aspect_ratio </span></a>
    <a id="minimaze"><span class="material-icons"> close_fullscreen </span></a>
    <iframe src="" frameborder="0"></iframe>
  </div>
</div>

<script src="./scripts/modal.js"></script>
{% endblock %}
