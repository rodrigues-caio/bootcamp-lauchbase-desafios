<div class="item">
  <div>Avatar URL</div>
  <div>
    <input 
      type="url" 
      name="avatar_url" 
      placeholder="http://"
      value="{{student.avatar_url}}"
    >
  </div>
</div>

<div class="item">
  <div>Nome</div>
  <div>
    <input 
      type="text" 
      name="name" 
      value="{{ student.name }}"
    >
  </div>
</div>

<div class="item">
  <div>Email</div>
  <div>
    <input 
      type="email" 
      name="email" 
      value="{{ student.email }}"
    >
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input 
      type="date" 
      name="birth"
      value="{{ student.birth }}"
    >
  </div>
</div>

<div class="item">
  <div>Ano Escolar</div>
  <div>
    <select name="school_year">
      <option 
        value="{{student.school_year}}" 
        {% if student.school_year == '5º ano do ensino fundamental' %}
          selected
        {% else %}
          selected
        {% endif %}
      > 5º ano do ensino fundamental
      </option>
      <option 
        value="{{student.school_year}}" 
        {% if student.school_year == '6º ano do ensino fundamental' %}
          selected
        {% endif %}
      > 6º ano do ensino fundamental
      </option>
      <option 
        value="{{student.school_year}}" 
        {% if student.school_year == '7º ano do ensino fundamental' %}
          selected
        {% endif %}
      > 7º ano do ensino fundamental
      </option>
      <option 
        value="{{student.school_year}}" 
        {% if student.school_year == '8º ano do ensino fundamental' %}
          selected
        {% endif %}
      > 8º ano do ensino fundamental
      </option>
      <option 
        value="{{student.school_year}}" 
        {% if student.school_year == '9º ano do ensino fundamental' %}
          selected
        {% endif %}
      > 9º ano do ensino fundamental
      </option>
      <option 
        value="{{student.school_year}}" 
        {% if student.school_year == '1º ano do ensino medio' %}
          selected
        {% endif %}
      > 1º ano do ensino médio
      </option>
      <option 
        value="{{student.school_year}}" 
        {% if student.school_year == '2º ano do ensino medio' %}
          selected
        {% endif %}
      > 2º ano do ensino médio
      </option>
      <option 
        value="{{student.school_year}}" 
        {% if student.school_year == '3º ano do ensino medio' %}
          selected
        {% endif %}
      > 3º ano do ensino médio
      </option>
      
    </select>
  </div>
</div>

<div class="item">
  <div>Carga horária semanal</div>
  <div>
    <input 
      type="number" 
      name="weekly_workload" 
      value="{{student.weekly_workload}}"
    >
  </div>
</div>

<button type="submit">Salvar</button>