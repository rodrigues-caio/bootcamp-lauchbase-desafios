{% extends 'layout.njk' %}

{% block content %}
<form class="card" method="post" action="/teachers">
  <section style="background: url('https://source.unsplash.com/collection/9021218/500x500') no-repeat center center / cover"></section>

  <section class="details">
    <h3>Cadastrar professor</h3>

    <div class="item">
      <div>Avatar URL</div>
      <div>
        <input type="url" name="avatar_url" placeholder="http://">
      </div>
    </div>

    <div class="item">
      <div>Nome</div>
      <div>
        <input type="text" name="name" placeholder="Nome do professor">
      </div>
    </div>

    <div class="item">
      <div>Data de nascimento</div>
      <div>
        <input type="date" name="birth">
      </div>
    </div>

    <div class="item">
      <div>Grau de escolaridade</div>
      <div>
        <select name="education_level">
          <option value="Ensino Médio Completo" selected>Ensino Médio Completo</option>
          <option value="Ensino Superior Completo">Ensino Superior Completo</option>
          <option value="Mestrado">Mestrado</option>
          <option value="Doutorado">Doutorado</option>
        </select>
      </div>
    </div>

    <div class="item">
      <div>Tipo de aula</div>
      <div>
        <span>
          <input 
            type="radio" 
            name="type_class" 
            id="type_class" 
            value="presencial"
            checked
          >
        Presencial
        </span>
        <span>
          <input 
            type="radio" 
            name="type_class" 
            id="type_class"
            value="distancia"
          >
        À distância
        </span>
      </div>
    </div>

    <div class="item">
      <div>Acompanhamento</div>
      <div>
        <input 
          type="text" 
          name="subjects" 
          placeholder="Separe as matérias por vírgula">
      </div>
    </div>

    <button type="submit">Salvar</button>
  </section>
</form>
{% endblock %}